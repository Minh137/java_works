		String nFolePath = "c:/demo/02.gif";
		
		String oFilePath2 = "c:/demo/01.gif";
		String nFolePath2 = "c:/demo/02.gif";
		//입출력 스트림에 버퍼 스트림 생성
		try {
			FileInputStream fis =new FileInputStream(oFilePath);
			FileOutStream fos =new FileOutputStream(nFilePath);
			
			FileInputStream fis2 =new FileInputStream(oFilePath2);
			FileOutStream fos2 =new FileOutputStream(nFilePath2);
			BufferedInputStream bis = new BufferedInputStream(fis2);
			BufferedOutputStream bos = new BufferedOutputStream(fos2);
			
			long nonBufferTime = copy(fis, fos);
			System.out.println("버퍼 미사용"+nonBufferTime+"ns");
			
		} catch (IOException e) {
